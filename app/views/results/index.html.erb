<section id="services" class="white-bg padding-top-bottom">
    
  <div class="container">
    
    <h1 class="section-title">Results</h1>
    <p class="section-description"></p>
    
    <div id="filter-works">
      <ul>
        <li class="active scrollimation fade-right d1">
          <a href="#" data-filter="*">All</a>
        </li>
        <li class="scrollimation fade-right">
          <a href="#" data-filter=".identity">Identity</a>
        </li>
        <li class="scrollimation fade-left">
          <a href="#" data-filter=".logo">Logo</a>
        </li>
        <li class="scrollimation fade-left d1">
          <a href="#" data-filter=".illustration">Illustration</a>
        </li>
      </ul>
    </div>

    <div class="row services">
    
      <div class="col-md-4 item text-center scrollimation fade-right d1">
    
        <h3>Food/Night</h3>
        <% @food.each do |f| %>
        <div class='activity fc-event ui-draggable ui-draggable-handle' data-event='{"title":"<%= f[:name] %>"}'>
          <b class='title'><%= f[:name] %></b></br>
          <%= f[:address].first %>
          <%= f[:address].last %>
<!--           <%#= f[:cats].join(', ') %>
          Distance in meters: <%#= f[:distance] %> -->
          <%= link_to f[:url], f[:url], :target => "_blank" %>
        </div>
        <% end %>
       
        <% @night.each do |f| %>
          <div class='activity fc-event ui-draggable ui-draggable-handle'>
            <b class='title'><%= f[:name] %></b></br>
            <%= f[:address].first %>
            <%= f[:address].last %>
            <!-- <%#= f[:cats].join(', ') %> -->
            <%= link_to f[:url], f[:url], :target => "_blank" %>
          </div>
        <% end %> 
      </div>
      
      <div class="col-md-4 item text-center scrollimation fade-right">

        <h3>Sights</h3>
        <% @sights.each do |f| %>
          <div class='activity fc-event ui-draggable ui-draggable-handle' data-event='{"title":"<%= f[:name] %>"}'>
          
            <b class='title'><%= f[:name] %></b></br>
            <%= f[:address][0] %></br>
           <!--  <%#= f[:cats] %></br>
            Distance in meters: <%#= f[:distance] %></br>
            <%#= f[:here_now] %></br> -->
            <%= link_to f[:url], f[:url], :target => "_blank" %></br>
          
          </div>
        <% end %>
      </div>

      
      <!-- <div class="col-md-1 item text-center scrollimation fade-left">
        
      </div> -->
      
      <div class="col-md-4 item text-center scrollimation fade-left d1">

        <div id='calendar'></div>
        
      </div>
      
    </div>
    
    <p class="text-center"><a class="btn btn-quattro scrollto" href="#portfolio">Our Awesome Works</a></p>
  </div>
  
</section>


