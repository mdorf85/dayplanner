    <section id="about" class="gray-bg padding-top-bottom">
    
      <div class="container">
      
        <h1 class="section-title">Have a Ticket?</h1>

        <p class="section-description">Let's Plan<br/></p>

        <div class="row">
          <div class="col-sm-2">
          </div>
          <div class="col-sm-8">
            <% if flash[:notice] %>
            <div class='notice'><%= flash[:notice] %></div>
            <% end %>
            <%= form_for Event.new, :id => 'contact-form', :class => 'col-sm-8 col-sm-offset-2'  do |f| %>
            <div class="form-group">
              <%= f.label :name, :class => 'control-label' %>
              <div class="controls">
              <%= f.text_field :name, :placeholder => 'ticket name', :class => 'form-control requiredField', :"data-error-empty" => 'enter ticket name' %><br/>
              </div>
            </div>
            <div class="form-group">
            <%= f.label :date, :class => 'control-label' %>
            <div class="controls">
            <%= f.date_field :date, :class => 'form-control requiredField', :"data-error-empty" => 'select date' %><br/>
            <%= f.submit 'Search', :class => 'btn btn-quattro', :'data-error-message' => "Error!" %>
            <% end %>
          
          </div>

        </div>
          
        </div><!--End row-->
        
      </div><!--End container -->
      
    </section><!--End Call to Action -->